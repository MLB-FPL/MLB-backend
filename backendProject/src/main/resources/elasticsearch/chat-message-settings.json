{
  "index": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "max_ngram_diff": 15
  },
  "analysis": {
    "filter": {
      "my_ngram": { "type": "ngram", "min_gram": 2, "max_gram": 15 }
    },
    "analyzer": {
      "ko_index": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [ "nori_readingform", "lowercase", "my_ngram" ]
      },
      "ko_search": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [ "nori_readingform", "lowercase" ]
      }
    }
  }
}
